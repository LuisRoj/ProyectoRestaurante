@model ProyectoRestaurante.Models.Platillo

<link rel="stylesheet" href="~/css/select.css" />

<div class="product-details-container">
    <div class="product-image">
        <img src="@Model.imagen" alt="Imagen del platillo" />
    </div>
    <div class="product-details">
        <h2>@Model.nombre</h2>
        <dl class="dl-horizontal">
            <dt>Descripción:</dt>
            <dd>@Model.descripcion</dd>
            <dt>Precio:</dt>
            <dd>@Model.precio</dd>
            <dt>Stock:</dt>
            <dd>@Model.stock</dd>
        </dl>
    </div>
</div>





